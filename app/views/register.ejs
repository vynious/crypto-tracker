<!DOCTYPE html>
<html>
<head>
    <title>Register</title>

</head>
<body>
    <div class="container">
        <h1>Register</h1>
        <form>
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit" id="register-btn">Register</button>
        </form>
        <br>
        <a href="/main/login">Register</a>
    </div>
</body>
</html>

<script>
    const registerBtn = document.getElementById("register-btn");
    const usernameData = document.getElementById('username')
    const emailData = document.getElementById("email");
    const passwordData = document.getElementById("password");
    
    registerBtn.addEventListener("click", async (e) => {
        e.preventDefault();
        const username = usernameData.value;
        const email = emailData.value;
        const password = passwordData.value;

        if (username && email && password) {
                await fetch("/api/auth/register", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({username: username,
                                        email: email, 
                                        password: password}),
                }).then(res => {
                    if (res.ok) {
                        alert('account created')
                    } else {
                        alert('failed account creation')
                    }
                    console.log(res);
                })
            
        } 
    })
</script>